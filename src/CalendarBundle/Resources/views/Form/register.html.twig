{% extends 'CalendarBundle::layout.html.twig' %}
{% block body %}
    {#{ form(form) }#}
    <form name="user" method="post">
        <div class="form-group">
            {{ form_row(form.name) }}
        </div>
        <div class="form-group">
            {{ form_row(form.email) }}
        </div>
        <div class="form-group">
            {{ form_row(form.password) }}
        </div>
        {{ form_rest(form) }}
        {{ form_widget(form.submit) }}
    </form>
{% endblock %}
